const skills = [
  { name: "HTML5", logo: "/logos/html5.svg" },
  { name: "CSS3", logo: "/logos/css.svg" },
  { name: "JavaScript", logo: "/logos/javascript.svg" },
  { name: "TypeScript", logo: "/logos/typescript.svg" },
  { name: "Astro", logo: "/logos/astro.svg" },
  { name: "Angular", logo: "/logos/angular.svg" },
  { name: "React", logo: "/logos/react.svg" },
  { name: "Tailwind CSS", logo: "/logos/tailwindcss.svg" },
  { name: "Bootstrap", logo: "/logos/bootstrap.svg" },
];
---
<section id="Skills" class="relative bg-[#0c0c0c] text-white h-screen">
  <div class="absolute inset-0 bg-black/50"></div>
  <section class="min-h-screen flex items-start">
    <div class="w-[90%] md:w-[80%] mx-auto px-6">
      <div class="relative z-10 flex flex-col items-start text-left pt-20 space-y-6">
        <h1 class="text-5xl md:text-7xl font-bold underline decoration-[#d1520e] decoration-2">
          Software Skills
        </h1>
        <div class="flex flex-wrap justify-center items-center gap-6 mt-10">
          {skills.map(skill => (
            <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-md border border-[#d1520e]/30 p-3 flex flex-col items-center w-28 h-28 justify-center hover:scale-105 transition-transform">
              <img src={skill.logo} alt={skill.name + " logo"} class="w-12 h-12 mb-2" />
              <span class="mt-1 text-sm font-semibold">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</section>