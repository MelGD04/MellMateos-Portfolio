---
---
<section id="Skills" class="relative bg-[#0c0c0c] text-white h-screen">

  <!-- Overlay oscuro -->
  <div class="absolute inset-0 bg-black/50"></div>

  <section class="min-h-screen flex items-start">
  <div class="w-[90%] md:w-[80%] mx-auto px-6">
    <div class="relative z-10 flex flex-col items-start text-left pt-20 space-y-6">

      <!-- Título -->
      <h1 class="text-5xl md:text-7xl font-bold underline decoration-[#d1520e] decoration-2">
        Software Skills
      </h1>



      <!-- Lenguajes -->
      <h2 class="text-2xl font-bold mt-8 mb-4 text-[#d1520e]">Lenguajes</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">html</span>
          <span class="mt-2 text-lg font-semibold">HTML5</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">css</span>
          <span class="mt-2 text-lg font-semibold">CSS3</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">code</span>
          <span class="mt-2 text-lg font-semibold">Java</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">code</span>
          <span class="mt-2 text-lg font-semibold">JavaScript</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">code</span>
          <span class="mt-2 text-lg font-semibold">TypeScript</span>
        </div>
      </div>

      <!-- Frameworks -->
      <h2 class="text-2xl font-bold mt-8 mb-4 text-[#d1520e]">Frameworks</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="mb-2">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="24" cy="24" r="20" fill="#181818"/>
              <path d="M24 10L34 38H14L24 10Z" fill="#fff"/>
              <path d="M24 10L34 38H24V10Z" fill="#d1520e"/>
            </svg>
          </span>
          <span class="mt-2 text-lg font-semibold">Astro</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="mb-2">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="24" cy="24" r="20" fill="#181818"/>
              <g>
                <ellipse cx="24" cy="24" rx="11" ry="4.5" stroke="#d1520e" stroke-width="2"/>
                <ellipse cx="24" cy="24" rx="11" ry="4.5" stroke="#d1520e" stroke-width="2" transform="rotate(60 24 24)"/>
                <ellipse cx="24" cy="24" rx="11" ry="4.5" stroke="#d1520e" stroke-width="2" transform="rotate(120 24 24)"/>
                <circle cx="24" cy="24" r="2.5" fill="#d1520e"/>
              </g>
            </svg>
          </span>
          <span class="mt-2 text-lg font-semibold">React</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="mb-2">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M24 4L43 10.5L39.5 37.5L24 44L8.5 37.5L5 10.5L24 4Z" fill="#d1520e"/>
              <path d="M24 8.5V39.5L36.5 34L39.5 12.5L24 8.5Z" fill="#c3002f"/>
              <path d="M24 13L32.5 32H28.5L27 28H21L19.5 32H15.5L24 13ZM24 18.5L21.5 24.5H26.5L24 18.5Z" fill="white"/>
            </svg>
          </span>
          <span class="mt-2 text-lg font-semibold">Angular</span>
        </div>
      </div>

      <!-- Librerías -->
      <h2 class="text-2xl font-bold mt-8 mb-4 text-[#d1520e]">Librerías</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="mb-2">
            <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12.5 24.5C14.5 18.5 18.5 15.5 25 15.5C32.5 15.5 34.5 20.5 37 24.5C35 30.5 31 33.5 24.5 33.5C17 33.5 15 28.5 12.5 24.5Z" fill="#d1520e"/>
              <path d="M10.5 31.5C12.5 27.5 15.5 25.5 21 25.5C26.5 25.5 28.5 28.5 30 31.5C28 35.5 25 37.5 19.5 37.5C14 37.5 12 34.5 10.5 31.5Z" fill="#d1520e"/>
            </svg>
          </span>
          <span class="mt-2 text-lg font-semibold">Tailwind CSS</span>
        </div>
        <div class="bg-[#181818] bg-opacity-80 rounded-xl shadow-lg border border-[#d1520e]/30 p-6 flex flex-col items-center hover:scale-105 transition-transform">
          <span class="material-icons text-5xl" style="color:#d1520e">code</span>
          <span class="mt-2 text-lg font-semibold">Bootstrap</span>
        </div>
      </div>
      

    </div>
  </div>
</section>


  </div>
</section>