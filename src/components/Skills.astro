---
const languages = [
  { name: "HTML5", logo: "/logos/html5.svg" },
  { name: "CSS3", logo: "/logos/css.svg" },
  { name: "JavaScript", logo: "/logos/javascript.svg" },
  { name: "TypeScript", logo: "/logos/typescript.svg" },
];

const frameworks = [
  { name: "Astro", logo: "/logos/astro.svg" },
  { name: "Angular", logo: "/logos/angular.svg" },  
  { name: "React", logo: "/logos/react.svg" },
  { name: "Tailwind CSS", logo: "/logos/tailwindcss.svg" },
  { name: "Bootstrap", logo: "/logos/bootstrap.svg" },
];
---

<section id="Skills" class="relative bg-[#0c0c0c] text-white min-h-screen pt-24 md:pt-32 pb-24">
  <div class="absolute inset-0 bg-black/50"></div>

  <!-- Contenido -->
  <section class="flex items-center justify-center relative">
    <div class="w-[90%] md:w-[80%] mx-auto px-6">
      <div class="relative z-10 flex flex-col items-center md:items-start text-center md:text-left space-y-6">

      

        <!-- TÃ­tulo -->
        <h1 class="text-4xl md:text-6xl font-bold underline decoration-[#d1520e] decoration-2">
          Software Skills
        </h1>

        <!-- Contenedor tarjetas -->
        <div class="flex flex-col md:flex-row gap-8 md:gap-10 mt-6 w-full justify-center items-center md:items-start">
          
          <!-- Card Lenguajes -->
          <div class="card fade-in-up bg-[#181818]/80 rounded-xl shadow-md border-2 border-[#d1520e] p-6 flex flex-col items-center w-full md:w-[32rem]">
            <h2 class="text-xl md:text-2xl font-bold text-[#d1520e] mb-4">Lenguajes</h2>
            <div class="flex flex-row justify-center items-center gap-6 flex-wrap">
              {languages.map(skill => (
                <div class="flex flex-col items-center w-16 h-16 justify-center hover:scale-105 transition-transform">
                  <img 
                    src={skill.logo} 
                    alt={skill.name + ' logo'} 
                    class="w-8 h-8 mb-1 svg-orange"
                  />
                  <span class="mt-1 text-xs font-semibold text-center">{skill.name}</span>
                </div>
              ))}
            </div>
          </div>

          <!-- Card Frameworks -->
          <div class="card bg-[#181818]/80 rounded-xl shadow-md border-2 border-[#d1520e] p-6 flex flex-col items-center w-full md:w-[32rem]">
            <h2 class="text-xl md:text-2xl font-bold text-[#d1520e] mb-4">Frameworks</h2>
            <div class="flex flex-row justify-center items-center gap-6 flex-wrap">
              {frameworks.map(skill => (
                <div class="flex flex-col items-center w-16 h-16 justify-center hover:scale-105 transition-transform">
                  <img 
                    src={skill.logo} 
                    alt={skill.name + ' logo'} 
                    class="w-8 h-8 mb-1 svg-orange"
                  />
                  <span class="mt-1 text-xs font-semibold text-center">{skill.name}</span>
                </div>
              ))}
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
</section>

<style>
  .svg-orange { 
    filter: invert(39%) sepia(94%) saturate(1172%) hue-rotate(353deg) brightness(94%) contrast(98%); 
  } 
  .card { 
    border-radius: 32px; 
    transition: box-shadow 0.3s, border 0.3s, 
    backdrop-filter 0.3s, 
    transform 0.3s; 
  } 
  .card:hover { 
    box-shadow: 0 8px 32px 0 rgba(255, 118, 44, 0.25); 
    border: 2px solid #d1520e; backdrop-filter: blur(12px); 
    transform: translateY(-12px);
  }
</style>
