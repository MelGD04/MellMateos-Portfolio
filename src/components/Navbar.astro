---
const links = [
  { name: "Home", href: "#Home", icon: "home" },
  { name: "About", href: "#About", icon: "person" },
  { name: "Skills", href: "#Skills", icon: "code" },
  { name: "Projects", href: "#Projects", icon: "folder" }
];
---

<nav 
  id="navbar"
  class="fixed top-4 left-1/2 -translate-x-1/2 z-50 
         w-auto px-6 py-2 
         bg-black/30 backdrop-blur-xl text-white rounded-full shadow-2xl border border-white/10 transition-all duration-300"
>
  <div class="flex items-center justify-center space-x-6">
    
    <!-- Links (desktop) -->
    <div class="hidden md:flex space-x-6">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-gray-200 hover:text-[#d1520e] transition"
          onclick="event.preventDefault(); var el = document.querySelector(this.getAttribute('href')); if(el) el.scrollIntoView({behavior: 'smooth'}); if(this.getAttribute('href') === '/') window.location.href = '/'"
        >
          {link.name}
        </a>
      ))}
    </div>

    <!-- Menú móvil -->
<div id="mobile-navbar" class="fixed md:hidden top-0 left-0 w-full w-screen z-50 bg-black/30 backdrop-blur-xl transition-all duration-300 flex items-start">
  <div class="flex justify-center items-center w-full px-2 py-4 mt-2">
    {links.map((link, idx) => (
      <>
        <a 
          href={link.href}
          class="flex flex-col items-center px-2"
          onclick="event.preventDefault(); var el = document.querySelector(this.getAttribute('href')); if(el) el.scrollIntoView({behavior: 'smooth'});"
        >
          <span class="material-icons text-2xl mb-1" style="color: #d1520e;">{link.icon}</span>
          <span class="text-[0.65rem] text-white">{link.name}</span>
        </a>
        {idx < links.length - 1 && (
          <div class="h-8 w-px bg-gray-400 mx-2 opacity-40 self-center"></div>
        )}
      </>
    ))}
  </div>
</div>
    
</nav>



 <style>
  a {
    padding: 0 2px;
    text-decoration: none;
    color: white;
    background: transparent;
    border: none;
    position: relative;
    transition: 0.5s ease;
    z-index: 2;
  }
  a::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 2px;
    width: 0;
    background-color: #d1520e;
    transition: 0.5s ease;
    z-index: 1;
  }
  a:hover {
    color: #d1520e;
    transition-delay: 0.1s;
  }
  a:hover:before {
    width: 100%;
  }
  #navbar {
    box-shadow: 0 4px 16px 0 rgba(255, 118, 44, 0.18);
    border-radius: 32px;
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(12px);
  }
 </style>