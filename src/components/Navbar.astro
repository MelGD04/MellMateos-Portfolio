---
const links = [
  { name: "Home", href: "/" },
  { name: "About", href: "#About" },
  { name: "Portfolio", href: "#Portfolio" }
];
---

<nav 
  id="navbar"
  class="fixed top-4 left-1/2 -translate-x-1/2 z-50 
         w-auto px-6 py-2 
         bg-black/50 backdrop-blur-md text-white rounded-full shadow-lg transition-all duration-300"
>
  <div class="flex items-center justify-center space-x-6">
    
    <!-- Links (desktop) -->
    <div class="hidden md:flex space-x-6">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-gray-200 hover:text-[#d1520e] transition"
        >
          {link.name}
        </a>
      ))}
    </div>

    <!-- Botón menú móvil -->
    <button 
      id="menu-btn"
      class="md:hidden p-2 rounded-md text-gray-200 hover:bg-white/10"
      onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
    >
      ☰
    </button>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="hidden md:hidden bg-black/90 rounded-b-2xl mt-2">
    <div class="px-4 pt-2 pb-3 space-y-2">
      {links.map(link => (
        <a 
          href={link.href} 
          class="block px-3 py-2 rounded-md text-gray-200 hover:bg-[#d1520e] transition"
        >
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>


 <style>
  a{
    padding: 0 2px;
    text-decoration: none;
    color:white;
    background: transparent;
    border: none;
    position: relative;
    transition: 0.5s ease;
  }
  a::before{
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 2px;
    width: 0;
    background-color: #d1520e;
    transition: 0.5s ease;
}
a:hover{
    color: #d1520e;
    transition-delay: 0.1s;
}
a:hover:before{
    width: 100%;
}


 </style>