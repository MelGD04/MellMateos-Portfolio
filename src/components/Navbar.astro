---
const links = [
  { name: "Home", href: "#Home", icon: "home" },
  { name: "About", href: "#About", icon: "person" },
  { name: "Skills", href: "#Skills", icon: "code" },
  { name: "Projects", href: "#Projects", icon: "folder" }
];
---

<nav 
  id="navbar"
  class="fixed top-4 left-1/2 -translate-x-1/2 z-50 
         w-auto px-6 py-2 
         bg-black/30 backdrop-blur-xl text-white rounded-full shadow-2xl border border-white/10 transition-all duration-300
         md:top-4 md:left-1/2 md:-translate-x-1/2
         md:w-auto
         md:rounded-full
         md:px-6 md:py-2
         md:border
         md:shadow-2xl
         md:flex
         md:items-center
         md:justify-center
         md:space-x-6
         md:bg-black/30
         md:backdrop-blur-xl
         hidden md:flex"
>
  <!-- Links desktop -->
  {links.map(link => (
    <a 
      href={link.href} 
      class="text-gray-200 hover:text-[#d1520e] transition"
      onclick="event.preventDefault(); var el = document.querySelector(this.getAttribute('href')); if(el) el.scrollIntoView({behavior: 'smooth'});"
    >
      {link.name}
    </a>
  ))}
</nav>


<!-- Navbar mÃ³vil -->
<div 
  id="mobile-navbar" 
  class="fixed top-0 left-0 w-full z-50 bg-black/40 backdrop-blur-xl 
         border-b border-white/10 md:hidden 
         flex items-center justify-around px-2 py-2 rounded-b-2xl"
>
  {links.map((link, idx) => (
    <div 
      class={`flex flex-col items-center flex-1 
              ${idx < links.length - 1 ? "border-r border-gray-400/40" : ""}`}
    >
      <a 
        href={link.href}
        class="flex flex-col items-center justify-center"
        onclick="event.preventDefault(); var el = document.querySelector(this.getAttribute('href')); if(el) el.scrollIntoView({behavior: 'smooth'});"
      >
        <span class="material-icons text-2xl" style="color: white;">{link.icon}</span>
        <span class="text-[0.65rem] text-white mt-1">{link.name}</span>
      </a>
    </div>
  ))}
</div>

<style>
  a {
    padding: 0 2px;
    text-decoration: none;
    color: white;
    background: transparent;
    border: none;
    position: relative;
    transition: 0.5s ease;
    z-index: 2;
  }
  a::before {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    height: 2px;
    width: 0;
    background-color: #d1520e;
    transition: 0.5s ease;
    z-index: 1;
  }
  a:hover {
    color: #d1520e;
    transition-delay: 0.1s;
  }
  a:hover:before {
    width: 100%;
  }
  #navbar {
    box-shadow: 0 4px 16px 0 rgba(255, 118, 44, 0.18);
    border-radius: 32px;
    border: 1px solid rgba(255,255,255,0.1);
    backdrop-filter: blur(12px);
  }
</style>
